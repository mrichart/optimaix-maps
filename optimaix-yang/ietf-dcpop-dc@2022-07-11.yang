  /* Features */




  /* Identity ...*/



  /* Typedef */

 typedef dc-id {
    type string;
    description
      "Defines a type of datacenter (dc) identifier.";
  }


/* Groupings */

 grouping datacenter {
    description
      "Datacenter related information";
    leaf dc-id {
      type dc-id;
      description
        "A unique identifier for the referred datacenter";
    }

leaf-list ap {
      type leafref {
        path "/actn-vn:access-point/actn-vn:ap/actn-vn:ap-id";
      }
      description
        "A reference to the PE node in the native TE Topology";
    }


  } //datacenter


/* Configuration data nodes */

  container dcpop {
    description
      "DC configurations";
    list dc {
      key "dc-id";
      description
        "datacenter identifier";
      uses datacenter {
        description
          "The datacanter information";
      }
    }
    reference
      " ";
